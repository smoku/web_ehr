<h1>Listing medications</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Started date</th>
    <th>Ended date</th>
    <th>Route</th>
    <th>Strength</th>
    <th>Dose</th>
    <th>Frequency</th>
    <th>Note</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @medications.each do |medication| %>
  <tr>
    <td><%= medication.name %></td>
    <td><%= medication.started_date %></td>
    <td><%= medication.ended_date %></td>
    <td><%= medication.route %></td>
    <td><%= medication.strength %></td>
    <td><%= medication.dose %></td>
    <td><%= medication.frequency %></td>
    <td><%= medication.note %></td>
    <td><%= link_to 'Show', medication %></td>
    <td><%= link_to 'Edit', edit_medication_path(medication) %></td>
    <td><%= link_to 'Destroy', medication, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

